<%- include("../partials/header") %>
<style>
    body{
        background-image:url(/images/background.jpg);
		font-family: 'Architects Daughter', cursive;
letter-spacing: 3px;
        color:beige;
 
    }
</style>
<div class="container hey">
    <div class="row">
        <div class="col-lg-12">
        <h1 style="text-align: center;background-color:rgba(0,0,0,0.75);color: rgb(255, 255, 255);">Add new comment to <%=social.name%></h1> 
        </div>
        <div class="col-lg-12 col-md-12 col-sm-12">
        <div style="width: 100%;margin: 100px auto;">
        <form action="/socials/<%= social._id%>/comments" method="post">
            <div class="form-group">
                <label style="font-size:3rem;background-color:rgba(0,0,0,0.80)" for="" class="label">Add your comments :</label>
                <input class="form-control" type="text" name="comment[text]" placeholder="Add your comment" style="height: 50px;">
                
            </div>
             <div class="form-group">
                <button class="btn btn-lg btn-dark btn-block bigbox" style="background-color: #000000;color: rgb(255, 255, 255);border: 2px solid rgba(255, 255, 255);box-shadow:0 6px 9px 6px rgb(0, 0, 0,0.9);border-radius: 5px;">Submit</button>
            </div>
        </div>
        </form>
        <a href="/socials" class="btn btn-lg bigbox" style="background-color: #000000;color: rgb(255, 255, 255);border: 2px solid rgba(255, 255, 255);box-shadow:0 6px 9px 6px rgb(0, 0, 0,0.9);border-radius: 5px;">Go Back</a>
        </div>
        
        

    </div>
</div>
<%- include("../partials/footer") %>