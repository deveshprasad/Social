<%- include("../partials/header") %>
<div class="container">
    <div class="row">
        <div class="col-lg-12">
        <h1 style="text-align: center;">Add new comment to <%=social.name%></h1> 
        </div>
        <div class="col-lg-12 col-md-12 col-sm-12">
        <div style="width: 100%;margin: 100px auto;">
        <form action="/socials/<%= social._id%>/comments" method="post">
            <div class="form-group">
                <input class="form-control" type="text" name="comment[text]" placeholder="Add your comment">
                
            </div>
             <div class="form-group">
                <button class="btn btn-lg btn-dark btn-block">Submit</button>
            </div>
        </div>
        </form>
        <a href="/socials">Go Back</a>
        </div>
        
        

    </div>
</div>
<%- include("../partials/footer") %>