<%- include("../partials/header") %>
<style>body{background-image:url(/images/background.jpg);font-weight: 800;font-family: 'Architects Daughter', cursive;letter-spacing: 3px;color:beige;}.login-wrap{width: 100%;margin:auto;margin-top:30px;max-width:550px;min-height:550px;position:relative;background-color: rgb(0, 0, 0,0.75);box-shadow:0 12px 15px 0 rgba(0,0,0,.24),0 17px 50px 0 rgba(0,0,0,.19);}</style>
<div class="body hey">
	<div class="login-wrap hey animate-zoom">
		<div class="login-html" style="background-color:rgba(0,0,0,0.65)">
			<input id="tab-1" type="radio" name="tab" class="sign-in" checked><label for="tab-1" class="tab">Add new comment to <%=social.name%> !</label>
			<div class="login-form my-4">
					<form action="/socials/<%= social._id%>/comments" method="post">
                    <div class="group my-5">
						<label style="font-size:1.5rem;" for="" class="label">Add your comments !</label>
                <input class="input" type="text" name="comment[text]" placeholder="Add your comment" style="height: 50px;">
					</div>
                    <div class="group my-5 px-4">
                        <button class="btn btn-lg btn-dark btn-block bigbox butt">Submit</button>
					</div>
					<div class="group my-5">
                        <a href="/socials" class="btn btn-lg bigbox butt">Go Back</a>
					</div>
					</form><div class="hr"></div>
			</div>
		</div>
	</div>
</div>
<%- include("../partials/footer") %>