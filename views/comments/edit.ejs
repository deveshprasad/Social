<%- include("../partials/header") %>
<style>body{background-image:url(/images/background.jpg);font-weight: 800;font-family: 'Architects Daughter', cursive;letter-spacing: 3px;color:beige;}</style>
<div class="container hey">
    <div class="row">
        <div class="col-lg-12">
        <h1 style="text-align: center;background-color:rgba(0,0,0,0.75);color: rgb(255, 255, 255);">Edit Comment</h1> 
        </div>
        <div class="col-lg-12 col-md-12 col-sm-12">
        <div style="width: 100%;margin: 100px auto;">
        <form action="/socials/<%= social_id%>/comments/<%= comment._id%>?_method=PUT" method="post">
            <div class="form-group">
                <label style="font-size:3rem;background-color:rgba(0,0,0,0.80)" for="" class="label">Edit " <%= comment.text%> " :</label>
                <input class="form-control" type="text" name="comment[text]" value="<%= comment.text%> " style="height: 50px;">    
            </div>
             <div class="form-group">
                <button class="btn btn-lg btn-dark btn-block bigbox butt">Submit</button>
            </div>
        </div>
        </form>
        <a href="/socials" class="btn btn-lg bigbox butt">Go Back</a>
        </div>
    </div>
</div>
<%- include("../partials/footer") %>