<%- include("partials/header") %>
<style>body{background-image: url(/images/background.jpg);font-family: 'Architects Daughter', cursive;letter-spacing: 3px;color:white;background-size:cover;background-position: center center;font-weight:800;}</style>
<div class="container hey">
	<div class="row" style="background-color: rgba(0,0,0,0.75);color:white;margin: 12% auto;">
		<div class="col-md-12">
			<form action="/reset/<%= token %>" method="POST">
				<div class="" style="text-align: center;">
					<legend style="font-size: 2.5rem;color:white">Reset Password</legend>
				</div>
			  <div class="form-group my-4">
				<label style="font-size: 1.6rem;color:white" for="password">New Password (Please a strong one with numbers, special characters, etc.)</label>
				<input type="password" name="password" value="" placeholder="NEW PASSWORD" autofocus="autofocus" class="form-control" style="color:black" />
			  </div>
			  <div class="form-group my-4">
				<label style="font-size: 1.6rem;color:white" for="confirm">Confirm Password</label>
				<input type="password" name="confirm" value="" placeholder="CONFIRM PASSWORD" class="form-control"/>
			  </div>
			  <div class="form-group px-5">
				<button type="submit" class="btn btn-lg bigbox btn-block butt">Update Password</button>
			  </div>
			</form>
		</div>
	</div>
</div>
<%- include("partials/footer") %>