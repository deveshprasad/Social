<%- include("../partials/header") %> 
<style>body{background-color: #000000;background-image: url("/images/background.jpg");font-family: 'Architects Daughter', cursive;background-size:cover;background-position: center center;letter-spacing: 3px;}h4, h2, p{color:white;background-attachment: black;}</style>
<div class="container hey" style="border: 1px solid rgba(255, 255, 255);box-shadow:0 6px 9px 6px rgb(0, 0, 0,0.9);">
    <div class="row">
        <div class="col-md-3 animate-left">
            <br>
            <div class="list-group">
                <li class="list-group-item bigbox" style="background-color: rgba(0, 0, 0, 0.85);color: rgb(255, 255, 255);border: 1px solid rgba(255, 255, 255);box-shadow:0 6px 9px 6px rgb(0, 0, 0,0.9);font-weight:700;font-size: 1.5rem;"><i class="fa fa-user"></i><a style="text-decoration:none" href="/users/<%=social.author.id %>"> <%=social.author.username%></a></li>
                <li class="list-group-item bigbox" style="background-color: rgba(0, 0, 0, 0.75);color: rgb(255, 255, 255);border: 1px solid rgba(255, 255, 255);box-shadow:0 6px 9px 6px rgb(0, 0, 0,0.9);font-weight:700;font-size: 1.5rem;"><i class="fa fa-globe"></i><a style="text-decoration:none" href=""> View Website</a></li>
                <li class="list-group-item bigbox" style="background-color: rgba(0, 0, 0, 0.65);color: rgb(255, 255, 255);border: 1px solid rgba(255, 255, 255);box-shadow:0 6px 9px 6px rgb(0, 0, 0,0.9);font-weight: 700;font-size: 1.5rem;"><i class="fa fa-map-marker"></i><a style="text-decoration:none" href=""> Location</a></li>
            </div>
        </div>
        <div class="col-md-9" style="background-color: rgba(0, 0, 0, 0.15);">
            <div class="thumbnail animate-zoom">
                <img class="img-responsive" src="<%= social.image %>" > 
                  <div class="caption-full" style="background-color: rgba(0, 0, 0, 0.75);font-weight:700;">
                      <h4 style="font-weight:700;font-size: 1.8rem;color:rgb(255, 244, 225);" class="pull-right bigbox">$ <%= social.price %> /night</h4>
                      <h4 class="" style="font-weight:700;font-size: 1.8rem;"><a href="" style="text-decoration:none"><i class="fa fa-cutlery"></i> <%= social.name %></a></h4>
                      <p><%=social.description%></p>
                      <p  style="font-weight:700;font-size: 1.5rem;color:rgb(250, 237, 212);">
                         <em><i class="fa fa-user"></i> Submitted By : <a href="/users/<%=social.author.id %>" style="color:rgb(255, 255, 255);text-decoration: none;"></em><%=social.author.username%></a></p><span class="pull-right" style="color:white;background-color: rgba(0,0,0,0.95);padding:5px"><%= moment(social.createdAt).fromNow() %></span>
                       
          <% if(currentUser&&social.author.id.equals(currentUser._id)|| currentUser && currentUser.isAdmin){%> 
                         <a class="bigbox btn btn-warning" href="/socials/<%=social._id%>/edit">Edit</a>
    <form id="deleteForm" action="/socials/<%= social._id %>?_method=DELETE" method="post">
    <button class="bigbox btn btn-danger">Delete</button>
    </form>
    <% }  %> 
                  </div>
            </div>
            <div class="well">
                <div class="text-right animate-right">
                    <br>
                    <a class="btn bigbox butt"  href="/socials/<%=social._id%>/comments/new">Add a comment <i class="fa fa-comments"></i>  </a>
                </div> 
                <hr>
                    <% social.comments.forEach((comment)=>{%>
                        <div class="row">
                            <div class="col-md-12" style="background-color: rgba(0, 0, 0,0.80);">
                               <strong style="color: whitesmoke;font-weight: 700;font-size: 1.8rem;"><i class="fa fa-user"></i> <%= comment.author.username%></strong>
                               <span class="pull-right" style="background-color:rgba(0, 0, 0,0.95);color:white;padding:5px;font-weight:700;"><%= moment(comment.createdAt).fromNow() %></span>
                                <p style="color: white"><i class="fa fa-comment"></i> <%= comment.text%></p>
                                <% if(currentUser&&comment.author.id.equals(currentUser._id)|| currentUser && currentUser.isAdmin){%>
                            <a class="bigbox btn btn-warning" 
                            href="/socials/<%=social._id%>/comments/<%= comment._id %>/edit">
                            Edit</a>
                            <form id="deleteForm" action="/socials/<%= social._id %>/comments/<%= comment._id %>?_method=DELETE" method="post">
                                <button class="bigbox btn btn-danger">Delete</button>
                                </form>
                                <% }  %> 
                            </div>
                        </div>
                       
                                -
                               
                           
                    <%});%>
                    
                
            </div>
        </div>
    </div>
</div>



    

<%- include("../partials/footer") %>  

