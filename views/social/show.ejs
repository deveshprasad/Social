<%- include("../partials/header") %> 

<div class="container">
    <div class="row">
        <div class="col-md-3">
            <p class="lead" style="font-size: 2rem;font-weight:200;">Social</p>
            <div class="list-group">
                <li class="list-group-item" style="background-color: black;color: blanchedalmond;">1</li>
                <li class="list-group-item">2</li>
                <li class="list-group-item">3</li>
            </div>
        </div>
        <div class="col-md-9">
            <div class="thumbnail">
                <img class="img-responsive" src="<%= social.image %>" > 
                  <div class="caption-full">
                      <h4 class="pull-right">$<%= social.price %> /night</h4>
                      <h4> <a href=""><%= social.name %></a></h4>
                      <p><%=social.description%></p>
                      <p>
                         <em> Submitted By : </em><%=social.author.username%></p>
          <% if(currentUser&&social.author.id.equals(currentUser._id)){%> 
                         <a class="btn btn-warning" href="/socials/<%=social._id%>/edit">Edit</a>
    <form id="deleteForm" action="/socials/<%= social._id %>?_method=DELETE" method="post">
    <button class="btn btn-danger">Delete</button>
    </form>
    <% }  %> 
                  </div>
            </div>
            <div class="well">
                <div class="text-right">
                    <a class="btn btn-dark" href="/socials/<%=social._id%>/comments/new">Add a comment  </a>
                </div> 
                <hr>
                    <% social.comments.forEach((comment)=>{%>
                        <div class="row">
                            <div class="col-md-12">
                               <strong><%= comment.author.username%></strong> 
                                <span class="pull-right">10 days ago</span>
                                <p> <%= comment.text%></p>
                                <% if(currentUser&&comment.author.id.equals(currentUser._id)){%>
                            <a class="btn btn-warning btn-xs" 
                            href="/socials/<%=social._id%>/comments/<%= comment._id %>/edit">
                            Edit</a>
                            <form id="deleteForm" action="/socials/<%= social._id %>/comments/<%= comment._id %>?_method=DELETE" method="post">
                                <button class="btn btn-danger btn-xs">Delete</button>
                                </form>
                                <% }  %> 
                            </div>
                        </div>
                       
                                -
                               
                           
                    <%});%>
                    
                
            </div>
        </div>
    </div>
</div>



    

<%- include("../partials/footer") %>  

