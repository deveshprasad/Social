
<%- include("../partials/header") %>
<div class="container">
    <div class="row">
        <div class="col-lg-12">
        <h1 style="text-align: center;">EDIT social <%= social.name %>  </h1>
        </div>
        <div class="col-lg-12 col-md-12 col-sm-12">
        <div style="width: 100%;margin: 100px auto;">
        <form action="/socials/<%=social._id%>/?_method=PUT" method="post">
            <div class="form-group">
                <input class="form-control" type="text" name="social[name]" value="<%= social.name %>">
                
            </div>
            <div class="form-group">
                <input class="form-control" type="number" name="social[price]" value="<%=social.price%>" min="0.01" step="0.01">
                
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="social[image]" value="<%= social.image %>">     
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="social[description]" value="<%= social.description %>">     
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-dark btn-block">Submit</button>
            </div>
        </div>
        </form>
        <a href="/socials">Go Back</a>
        </div>
        
        

    </div>
</div>
<%- include("../partials/footer") %>