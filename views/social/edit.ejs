
<%- include("../partials/header") %>
<style>
body{
    background-image: url(/images/background.jpg);
    font-family: 'Architects Daughter', cursive;
letter-spacing: 2px;
color:white;
   
}
</style>
<div class="container hey" style="border: 1px solid rgba(255, 255, 255);box-shadow:0 6px 9px 6px rgb(0, 0, 0,0.9);">
    <div class="row">
        <div class="col-lg-12">
        <h1 style="text-align: center;">EDIT social <%= social.name %>  </h1>
        </div>
        <div class="col-lg-12 col-md-12 col-sm-12">
        <div style="width: 100%;margin: 100px auto;">
        <form action="/socials/<%=social._id%>/?_method=PUT" method="post">
            <div class="form-group">
                <label style="font-size:2rem;background-color:rgba(0,0,0,0.75)" for="" class="label">Name :</label>
                <input class="form-control" type="text" name="social[name]" value="<%= social.name %>" style="background-color: rgba(0,0,0,0.69);color:whitesmoke">
                
            </div>
            <div class="form-group">
                <label style="font-size:2rem;background-color:rgba(0,0,0,0.75)" for="" class="label">Price ($) :</label>
                <input class="form-control" type="number" name="social[price]" value="<%=social.price%>" min="0.01" step="0.01" style="background-color: rgba(0,0,0,0.69);color:whitesmoke">
                
            </div>
            <div class="form-group">
                <label style="font-size:2rem;background-color:rgba(0,0,0,0.75)" for="" class="label">Image (URL link) :</label>
                <input class="form-control" type="text" name="social[image]" value="<%= social.image %>" style="background-color: rgba(0,0,0,0.69);color:whitesmoke">     
            </div>
            <div class="form-group">
                <label style="font-size:2rem;background-color:rgba(0,0,0,0.75)" for="" class="label">Description :</label>
                <input class="form-control" type="text" name="social[description]" value="<%= social.description %>" style="background-color: rgba(0,0,0,0.69);color:whitesmoke">     
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-dark btn-block" style="background-color: #000000;color: rgb(255, 255, 255);border: 2px solid rgba(255, 255, 255);box-shadow:0 6px 9px 6px rgb(0, 0, 0,0.9);">Submit</button>
            </div>
        </div>
        </form>
        <a href="/socials" class="btn btn-lg "style="background-color: #000000;color: rgb(255, 255, 255);border: 2px solid rgba(255, 255, 255);box-shadow:0 6px 9px 6px rgb(0, 0, 0,0.9);">Go Back</a>
        </div>
        
        

    </div>
</div>
<%- include("../partials/footer") %>