<%- include("../partials/header") %>
<style>body{background-image: url(/images/background.jpg);font-weight: 800;font-family: 'Architects Daughter', cursive;letter-spacing: 3px;color:white;}.login-wrap{width: 100%;margin:auto;margin-top:30px;max-width:750px;min-height:1000px;position:relative;background-color: rgb(0, 0, 0,0.75);box-shadow:0 12px 15px 0 rgba(0,0,0,.24),0 17px 50px 0 rgba(0,0,0,.19);}</style>
<div class="body hey">
	<div class="login-wrap hey">
		<div class="login-html" style="background-color:rgba(0,0,0,0.75)">
			<input id="tab-1" type="radio" name="tab" class="sign-in" checked><label for="tab-1" class="tab">Edit Social <%= social.name %> !</label>
			<div class="login-form">
					<form action="/socials/<%=social._id%>/?_method=PUT" method="post" enctype="multipart/form-data">
                    <div class="group my-4">
                        <label style="font-size:1.3rem;" for="" class="label">Name :</label>
                        <input class="input" type="text" name="name" value="<%= social.name %>" >
					</div>
                    <div class="group my-4">
                        <label style="font-size:1.3rem;" for="" class="label">Price ($) :</label>
                        <input class="input" type="number" name="price" value="<%=social.price%>" min="0.01" step="0.01" >
                    </div>
                    <div class="group my-4">
                        <label style="font-size:1.3rem;" for="" class="label">Image :</label>
                <input type="file" id="image" name="image" accept="image/*" style="background-color:black;color:white;font-weight:800;font-size:1.5rem;cursor:pointer;border:1px solid white">
                    </div>
                    <div class="group my-4">
                        <label style="font-size:1.3rem;" for="" class="label">Description :</label>
                        <textarea  class="input" type="text" name="description"  value="<%= social.description %>" style="height:250px"></textarea>
                    </div>
                    <div class="group my-4 px-5">
                        <button class="btn btn-lg bigbox btn-block butt">Submit</button>
                    </div>
                    <div class="group my-4 " style="text-align:right">
                        <a href="/socials" class="btn btn-lg bigbox butt">Go Back</a>
                    </div>
                    
					</form>
					<div class="hr"></div>
			</div>
		</div>
	</div>
</div>
<%- include("../partials/footer") %>