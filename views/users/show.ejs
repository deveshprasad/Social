<%- include("../partials/header") %> 
<style>body{background-image: url("/images/background.jpg");font-family: 'Architects Daughter', cursive;background-size:cover;  background-position: center center;letter-spacing: 3px;}</style>
<div class="container hey my-4 p-4" style="border: 2px solid rgba(255, 255, 255);box-shadow:0 6px 9px 6px rgb(0, 0, 0,0.85);border-radius:25px">
<div class="row">
 <div class="col-md-6 " style="color:white;text-align:center;border-top-left-radius: 25px;border-bottom-left-radius: 25px;">

<div class="thumbnail" >
    <img src="<%=user.avatar%>" alt="user profile image" srcset="" style="box-shadow: 0 5px 8px 5px rgba(8, 8, 8, 0.651);border:2px solid rgba(255, 255, 255, 0.959);border-top-left-radius:25px;border-top-right-radius:25px"><br>
    <div class="caption p-3" style="background-color: rgba(0,0,0,0.85);border-bottom-left-radius: 25px;border-bottom-right-radius: 25px;border:2px solid rgba(255, 255, 255, 0.973)">
        
    <h1 style="font-weight:700"><%=user.firstName + " " + user.lastName %></h1><br>  
    <h5><%=user.description%></h5>
     
</div>
<a href="mailto:<%=user.email%>" target="_blank" style="text-decoration: none;"><button class="btn btn-lg btn-dark btn-block bigbox butt my-3"><%= user.email%> <i class="fa fa-envelope"></i></button></a> 
</div>
<br>

 </div>
 <div class="col-md-6 px-4" style="color:white;border-top-right-radius: 25px;border-bottom-right-radius: 25px;text-align: center;">
<h1 style="font-weight:700;background-color: rgba(0,0,0,0.85);border-radius: 25px;border:1px solid rgba(255, 255, 255, 0.829)">Social's created by <%= user.firstName %></h1><br>
        <ol>
            <% socials.forEach(function(social) {  %>
                <li><p  class="link" style="font-size:2rem;font-weight: 600;text-decoration: none;background-color: rgba(0, 0, 0, 0.85);border-radius: 25px"><a style="text-decoration: none;" href="/socials/<%= social.id %>"><%=social.name%> : Rs <%=social.price%></p>
               <img class="img-responsive" src="<%= social.image %>" width="100%" style="box-shadow: 0 5px 8px 5px rgba(0, 0, 0, 0.9);border:2px solid rgb(255, 255, 255);border-radius: 15px;"></a></li>
            <% }); %>      
        </ol>
        <div class="" style="text-align:right"><br>
            <a href="/socials" class="btn btn-lg bigbox butt">Go Back</a>
        </div>
 </div>
</div>
</div>
<%- include("../partials/footer") %> 